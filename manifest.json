{
  "manifest_version": 2,
  "name": "Dark Mode Bible",
  "short name": "Dark Bible",
  "description": "Make Bible.com dark for easier reading at night",
  "version": "1.0",
  "author": "Josiah Nunemaker",
  "content_scripts": [
    {
      "css": ["styles.css"],
      "matches": ["https://www.bible.com/*"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
